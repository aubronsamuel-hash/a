# Application

APP_NAME=Coulisses Crew API
APP_ENV=dev
APP_HOST=0.0.0.0
APP_PORT=8001
APP_LOG_LEVEL=info
APP_DEFAULT_PAGE_SIZE=50
APP_MAX_PAGE_SIZE=200
APP_REQUEST_TIMEOUT_SECONDS=15

# Security

JWT_SECRET=changeme-dev
JWT_ALGO=HS256
JWT_TTL_SECONDS=3600
REFRESH_JWT_SECRET=changeme-refresh-dev
REFRESH_JWT_TTL_SECONDS=1209600  # 14 jours
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Admin autoseed

ADMIN_AUTOSEED=true
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# DB (par defaut SQLite)

DB_DSN=sqlite:///./cc.db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=10

# Exemple DSN Postgres (activer en remplacant DB_DSN ci-dessus)

# DB_DSN=postgresql+psycopg://app:app@localhost:5432/app

# Observabilite

REQUEST_ID_HEADER=X-Request-ID
LOG_JSON=true

# Rate limiting
RATE_LIMIT_ENABLE=true
RATE_LIMIT_GLOBAL_MAX=120
RATE_LIMIT_GLOBAL_WINDOW_SECONDS=60
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_AUTH_WINDOW_SECONDS=60
